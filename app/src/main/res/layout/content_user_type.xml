<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:weightSum="100"

    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.app.sk.cineview.UserTypeActivity"
    tools:showIn="@layout/activity_user_type">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="60"
        android:background="@color/colorPurple"
        android:gravity="center">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/logo" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="40"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="50dp"
            android:layout_marginTop="50dp"
            android:text="Choose A Profile"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimary"
            android:textSize="27dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="100">

            <TextView
                android:id="@+id/subscriber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:drawablePadding="5dp"
                android:drawableTop="@drawable/subscriber"
                android:gravity="center_horizontal"
                android:text="Subscriber"
                android:textAllCaps="true"
                android:textColor="#212121"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/distributer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:drawablePadding="5dp"
                android:drawableTop="@drawable/distributor"
                android:gravity="center_horizontal"
                android:text="Distributor"
                android:textAllCaps="true"
                android:textColor="#212121"
                android:textSize="20dp" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>

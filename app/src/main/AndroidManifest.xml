<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="sk.com.ciniv" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".UserTypeActivity"
            android:label="@string/title_activity_user_type"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SplashActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_user_type"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SubscriberLogin"
            android:label="@string/title_activity_subscriber_login"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SubscriberHome"
            android:label="@string/title_activity_subscriber_home"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".FetchDataActivity"
            android:label="@string/title_activity_fetch_data"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".PurchaseTicketActivity"
            android:label="@string/title_activity_purchase_ticket"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".BookShowActivity"
            android:label="@string/title_activity_book_show"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".PayUMoneyActivity"
            android:label="@string/title_activity_pay_umoney"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>
        <activity
            android:name=".PaymentStatusActivity"
            android:label="@string/title_activity_payment_status"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>

